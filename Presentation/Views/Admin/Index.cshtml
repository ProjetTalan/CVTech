@model Presentation.ViewModels.AdminViewModels.IndexAdminViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.ProfileModels[0].FirstName)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileModels[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileModels[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileModels[0].RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ProfileModels) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
